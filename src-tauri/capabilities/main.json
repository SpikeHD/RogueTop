{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": ["main"],
  "platforms": [
    "macOS",
    "windows",
    "linux",
    "iOS",
    "android"
  ],
  "local": true,
  "remote": {
    "urls": ["https://pokerogue.net/"]
  },
  "permissions": [
    "core:path:default",
    "core:event:default",
    "core:window:default",
    "core:app:default",
    "core:resources:default",
    "core:menu:default",
    "core:tray:default",
    "core:webview:allow-internal-toggle-devtools",
    "gamepad:default"
  ]
}
